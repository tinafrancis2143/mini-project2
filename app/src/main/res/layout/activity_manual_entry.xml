<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".ManualEntryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_manual_entry"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Manual Entry"
        app:titleTextColor="#4E4E4E" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type or paste the ingredients below, separated by commas."
        android:fontFamily="@font/satisfy"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="#555555"
        android:textSize="16sp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ingredients_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:hint="e.g., Aqua, Glycerin, Sodium Chloride..."
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:background="@android:color/transparent"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_analyze_manual"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:text="Analyze Ingredients"
        android:textSize="18sp"
        app:cornerRadius="12dp"/>

</LinearLayout>